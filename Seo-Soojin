function hairLeft(){

 fill(0);
  
  ellipse(x*.38, y*.28, .18*x, 2*y/5)

  rectMode(CENTER);
  
  rect(.399*x,.38*y, x/4.9, y/3.4)
  
}

function hairRight(){
 
  fill(hairRed,hairGreen,hairBlue);
  
  ellipse(x*.64, y*.28, .18*x, 2*y/5)

  rectMode(CENTER);
  
  rect(.63*x,.38*y, x/5.1, y/3.4)
}

