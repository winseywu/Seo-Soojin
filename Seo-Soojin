function setup() {
  createCanvas(x, y);
    
}

function draw() {
  
  Background();
  
  //我的老婆啊啊啊，对不起了
  
  hairLeft();
  hairRight();
  
  neck();
  ear();
  head();
  neckShadow();
  
  鬓发();
  hairBangs();
  hairBack();
  //faceProportion();
   
  shoulderRight();
  armRight();
  handRight();
  handLeft();
  
  stroke(1);
  strokeWeight(3);
  
  point(x/2.1, y/3.9)
}


function Background(){

  noStroke();
  fill(255,0,0);
  triangle(0,0, x,y, x,0)

  fill(0);
  triangle(0,0, 0,y, x,y)
}
  var x=400;
  var y=400;

//skin color
  var skinRed = 244
  var skinGreen = 128
  var skinBlue = 0

//hair color
  var hairRed = 38
  var hairGreen = 38
  var hairBlue = 38
  
  
function head() {
  
  noStroke();
   
  fill(skinRed+6,skinGreen+74,skinBlue+180);
  
   ellipse(x/2,y/5.5, x/3.4,y/3.3);
  
   ellipse(x/2,y/3.9, x/3.5,y/2.7);
  

}

function hairBangs(){
  
  noStroke();
  
  fill(hairRed,hairGreen,hairBlue);
  
//Guide
  
  //stroke(1);
  //strokeWeight(5);
  
  //point(x/2.9,y/4.9);
  //point(x/3,y/5);
  //point(x/3.07,y/5.5);
  //point(x/3.1,y/6);
  //point(x/3.15,y/7);
  //point(x/3.15,y/8.5);
  //point(x/3.05,y/11); 
  //point(x/2.9,y/15);
  //point(x/2.5,y/35);
  //point(x/2.25,6.5);
  //point(x/2,5);
  //point(x/1.8,6.5);
  //point(x/1.6,y/30);
  //point(x/1.45, y/10);
  //point(x/1.4, y/5.5);
  //point(x/1.4, y/5);
  
  //strokeWeight(1);
  
  //line(x/3,y/5, 1.85*x/3,y/5.5);  
  
  beginShape()
  
    curveVertex(x/2.9, y/4.9);
    curveVertex(x/3, y/5);
    //curveVertex(x/3.07,y/5.5);
    curveVertex(x/3.1, y/6);
    curveVertex(x/3.15, y/7);
    curveVertex(x/3.15, y/8.5);
    curveVertex(x/3.05, y/11);
    curveVertex(x/2.9, y/15);
    curveVertex(x/2.5, y/35);
    curveVertex(x/2.25, 6.5);
    curveVertex(x/2, 5);
    curveVertex(x/1.8, 6.5);
    curveVertex(x/1.6, y/30);
  
    curveVertex(x/1.45, y/10);

    curveVertex(x/1.4, y/5.5);

    curveVertex(x/1.4, y/5);
  
  endShape()
  
}


function neck(){

  fill(skinRed+6,skinGreen+74,skinBlue+180);
  noStroke()
  
  //Guide
  
  //stroke(1);
  //strokeWeight(5);
  
  //point(x/2.1,y/2.25);
  //point(x/2,y/2);
  //point(x/1.5,y/2.25);
  //point(x/1.55,y/3);
  
  
  beginShape()
  
    vertex(x/2.1,y/2.35);
    vertex(x/2,y/2);
    vertex(x/1.5,y/2.5);
    vertex(x/1.55,y/4);
  
  endShape()
  

  beginShape()
  
    vertex(x/2,y/2.);
    vertex(x/1.5,y/2.51);
    vertex(x/1.45,y/2);
    vertex(x/2.2,y/1.85);
    
  endShape()
  
  
}

