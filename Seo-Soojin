function faceProportion(){
  
  stroke(1);

  line(x/3,y/4.3, 2*x/3,y/4.5);
  
  line(x/3,y/3.25, 2*x/3,y/3.4);
  
  line(x/3,y/2.65, 2*x/3,y/2.75);
  
  line(x/2.5,y/5, x/2.2,220);

}
